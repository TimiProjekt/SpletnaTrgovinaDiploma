@using SpletnaTrgovinaDiploma.Data.ViewModels;
@model UserInfoViewModel;

@{
    ViewData["Title"] = "Update settings";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <p>
            <h4>@ViewData["Title"]</h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"]</span>
            </div>
        }

        <div class="row">
            <div class="col-md-8 ml-2 offset-md-1">
                <form asp-action="Settings">
                    @Html.HiddenFor(model => model.EmailAddress)

                    <div class="form-group">
                        <b>Full name:</b>
                        <u class="m-3">
                            @Model.FullName
                        </u>
                    </div>

                    <div class="form-group">
                        <b>Email:</b>
                        <u class="m-3">
                            @Model.EmailAddress
                        </u>
                    </div>

                    <div class="form-group">
                        <b>Telephone number:</b>
                        <u class="m-3">
                            @Model.PhoneNumber
                        </u>
                    </div>

                    <div class="form-group">
                        <b>Street name:</b>
                        <u class="m-3">
                            @Model.StreetName
                        </u>
                    </div>

                    <div class="form-group">
                        <b>House number:</b>
                        <u class="m-3">
                            @Model.HouseNumber
                        </u>
                    </div>

                    <div class="form-group">
                        <b>Zip code:</b>
                        <u class="m-3">
                            @Model.ZipCode
                        </u>
                    </div>

                    <div class="form-group">
                        <b>City:</b>
                        <u class="m-3">
                            @Model.City
                        </u>
                    </div>

                    <div class="form-group">
                        <b>Country:</b>
                        <u class="m-3">
                            @(((List<Country>)(ViewBag.Countries.Items)).SingleOrDefault(c => c.Id == Model.CountryId)?.Name)
                        </u>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>