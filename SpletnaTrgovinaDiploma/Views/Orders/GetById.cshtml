@using SpletnaTrgovinaDiploma.Data.ViewModels
@using SpletnaTrgovinaDiploma.Helpers
@model Order

@{
    ViewData["Title"] = "Specific order";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <p>
            <h4>Order with order Id @Model.Id</h4>
        </p>

        @if (User.IsUserAdmin())
        {
            <a asp-controller="Orders" asp-action="EditStatus" asp-route-id="@Model.Id">Edit status of the order</a>
        }

        <div class="form-group">
            <b>Full name:</b>
            <u class="m-3">
                @if (Model.User != null)
                {
                    <a asp-controller="Account" asp-action="GetUserInfo" asp-all-route-data="@(new Dictionary<string, string> {{"userId", Model.UserId}})">
                        @(Model.FullName)
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="GetUnregisteredUserInfo" asp-all-route-data="@(new Dictionary<string, string> {{"orderId", Model.Id.ToString()}})">
                        @(Model.FullName)
                    </a>
                }
            </u>
        </div>

        <div class="form-group">
            <b>Email:</b>
            <u class="m-3">
                @Model.DeliveryEmailAddress
            </u>
        </div>

        <div class="form-group">
            <b>Telephone number:</b>
            <u class="m-3">
                @Model.DeliveryPhoneNumber
            </u>
        </div>

        <div class="form-group">
            <b>Street name:</b>
            <u class="m-3">
                @Model.StreetName
            </u>
        </div>

        <div class="form-group">
            <b>House number:</b>
            <u class="m-3">
                @Model.HouseNumber
            </u>
        </div>

        <div class="form-group">
            <b>Zip code:</b>
            <u class="m-3">
                @Model.ZipCode
            </u>
        </div>

        <div class="form-group">
            <b>City:</b>
            <u class="m-3">
                @Model.City
            </u>
        </div>

        <div class="form-group">
            <b>City:</b>
            <u class="m-3">
                @Model.City
            </u>
        </div>

        <div class="form-group">
            <b>Shipping option:</b>
            <u class="m-3">
                @Model.ShippingOption - @(Model.ShippingOption switch
                {
                ShippingOption.PriorityHomeShipping => "Priority Home Shipping",
                ShippingOption.StandardHomeShipping => "Standard Home Shipping",
                ShippingOption.Paketomat => "Paketomat",
                _ => throw new NotSupportedException()
                })
            </u>
        </div>

        <div class="form-group">
            <b>Payment option:</b>
            <u class="m-3">
                @Model.PaymentOption - @(Model.PaymentOption switch
                {
                PaymentOption.CreditCard => "Visa/Mastercard online payment",
                PaymentOption.BankTransfer => "Funds transfer",
                PaymentOption.Cash=> "Payment after arrival",
                _ => throw new NotSupportedException()
                })
            </u>
        </div>

        <div class="form-group">
            <b>Order status:</b>
            <u class="m-3">
                @Model.Status.GetOrderStatusText()
            </u>
        </div>

        <div class="form-group">
            <b>Country:</b>
            <u class="m-3">
                @(((List<Country>)(ViewBag.Countries.Items)).SingleOrDefault(c => c.Id == Model.CountryId)?.Name)
            </u>
        </div>

        <ul class="nav nav-tabs">
            <li class="active">
                <a href="#tab-1" data-toggle="tab">Items</a>
            </li>
            <li class="ml-5">
                <a href="#tab-2" data-toggle="tab">History</a>
            </li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="tab-1">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Items</th>
                            <th>Total</th>
                            @if (User.IsUserAdmin())
                            {
                                <th>User</th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="align-middle">
                                @foreach (var item in Model.OrderItems)
                                {
                                    <div class="alert alert-info" role="alert">
                                        <a asp-controller="Items" asp-action="Details" asp-route-id="@item.Id">
                                            <span class="badge bg-success">@item.Amount</span>[@item.Price.ToString("c")] - @item.Item.Name
                                        </a>
                                    </div>
                                }
                            </td>
                            <td class="align-middle">
                                @Model.OrderItems.Select(m => m.Item.Price * m.Amount).Sum().ToString("c")
                            </td>
                            @if (User.IsUserAdmin())
                            {
                                <td class="align-middle"> @Model.FullName </td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="tab-pane fade" id="tab-2">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Order</th>
                            <th>Old status</th>
                            <th>New status</th>
                            <th>Comment</th>
                            <th>User</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @foreach (var item in Model.StatusChangedLog)
                            {
                                <td class="align-middle">
                                    @item.OrderId
                                </td>
                                <td class="align-middle">
                                    @item.OldStatus.GetOrderStatusText()
                                </td>
                                <td class="align-middle">
                                    @item.NewStatus.GetOrderStatusText()
                                </td>
                                <td class="align-middle">
                                    @item.Comment
                                </td>
                                <td class="align-middle">
                                    @item.UserId
                                </td>
                            }
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>