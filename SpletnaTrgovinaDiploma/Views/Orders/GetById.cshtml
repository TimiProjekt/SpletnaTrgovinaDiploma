@model Order

@{
    ViewData["Title"] = "Specific order";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <p>
            <h4>Order with order Id @Model.Id</h4>
        </p>

        <div class="form-group">
            <b>Full name:</b>
            <u class="m-3">
                @if (Model.User != null)
                {
                    <a asp-controller="Account" asp-action="GetUserInfo" asp-all-route-data="@(new Dictionary<string, string> {{"userId", Model.UserId}})">
                        @(Model.FullName)
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="GetUnregisteredUserInfo" asp-all-route-data="@(new Dictionary<string, string> {{"orderId", Model.Id.ToString()}})">
                        @(Model.FullName)
                    </a>
                }
            </u>
        </div>

        <div class="form-group">
            <b>Email:</b>
            <u class="m-3">
                @Model.DeliveryEmailAddress
            </u>
        </div>

        <div class="form-group">
            <b>Telephone number:</b>
            <u class="m-3">
                @Model.DeliveryPhoneNumber
            </u>
        </div>

        <div class="form-group">
            <b>Street name:</b>
            <u class="m-3">
                @Model.StreetName
            </u>
        </div>

        <div class="form-group">
            <b>House number:</b>
            <u class="m-3">
                @Model.HouseNumber
            </u>
        </div>

        <div class="form-group">
            <b>Zip code:</b>
            <u class="m-3">
                @Model.ZipCode
            </u>
        </div>

        <div class="form-group">
            <b>City:</b>
            <u class="m-3">
                @Model.City
            </u>
        </div>
        
        <div class="form-group">
            <b>City:</b>
            <u class="m-3">
                @Model.City
            </u>
        </div>

        <div class="form-group">
            <b>Shipping option:</b>
            <u class="m-3">
                @Model.ShippingOption - @(Model.ShippingOption == 0 ? "Priority Home Shipping" : Model.ShippingOption == 1 ? "Standard Home Shipping" : "Paketomat" )
            </u>
        </div>

        <div class="form-group">
            <b>Payment option:</b>
            <u class="m-3">
                @Model.PaymentOption - @(Model.PaymentOption == 0 ? "Visa/Mastercard online payment" : Model.PaymentOption == 1 ? "Paypal" : "Payment after arrival" )
            </u>
        </div>

        <div class="form-group">
            <b>Country:</b>
            <u class="m-3">
                @(((List<Country>)(ViewBag.Countries.Items)).SingleOrDefault(c => c.Id == Model.CountryId)?.Name)
            </u>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>Items</th>
                    <th>Total</th>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <th>User</th>
                    }
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="align-middle">
                        @foreach (var item in Model.OrderItems)
                        {
                            <div class="alert alert-info" role="alert">
                                <a asp-controller="Items" asp-action="Details" asp-route-id="@item.Id">
                                    <span class="badge bg-success">@item.Amount</span>[@item.Price.ToString("c")] - @item.Item.Name
                                </a>
                            </div>
                        }
                    </td>
                    <td class="align-middle">
                        @Model.OrderItems.Select(m => m.Item.Price * m.Amount).Sum().ToString("c")
                    </td>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <td class="align-middle"> @Model.FullName </td>
                    }
                </tr>
            </tbody>
        </table>
    </div>
</div>