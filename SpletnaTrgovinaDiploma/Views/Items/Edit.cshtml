@model NewItemViewModel

@{
    ViewData["Title"] = $"Update item {Model.Name}";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <p>
            <h4>@ViewData["Title"]</h4>
        </p>

        <div class="row">
            <div class="col-md-8 ml-2">
                <form asp-action="Edit" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @Html.HiddenFor(v => v.ImageUrl1)
                    @Html.HiddenFor(v => v.ImageUrl2)
                    @Html.HiddenFor(v => v.ImageUrl3)
                    @Html.HiddenFor(v => v.ImageUrl4)
                    @Html.HiddenFor(v => v.ImageUrl5)

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Price"></label>
                                @Html.TextBoxFor(model => model.Price, "{0:0.00}")
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ProductCode"></label>
                                <input asp-for="ProductCode" class="form-control" />
                                <span asp-validation-for="ProductCode" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Availability"></label>
                                @Html.TextBoxFor(model => model.Availability, "{0:0}")
                                <span asp-validation-for="Availability" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="BrandIds"></label>
                                <select asp-for="BrandIds" class="form-control" asp-items="ViewBag.Brands" multiple></select>
                                <span asp-validation-for="BrandIds" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="ShortDescription"></label>
                                <textarea asp-for="ShortDescription" class="form-control" rows="6"></textarea>
                                <span asp-validation-for="ShortDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-form-label">Select File for Image 1</label>
                        <input asp-for="ImageFile1" class="form-control" accept=".jpg" />
                        <span asp-validation-for="ImageFile1" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 text-left">
                        <label class="col-form-label">Old image</label>
                        <img class="w-100 text-center" src="@Model.ImageUrl1" />
                    </div>

                    <div class="form-group">
                        <label class="col-form-label">Select File for Image 2</label>
                        <input asp-for="ImageFile2" class="form-control" accept=".jpg" />
                        <span asp-validation-for="ImageFile2" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 text-left">
                        <label class="col-form-label">Old image</label>
                        <img class="w-100 text-center" src="@Model.ImageUrl2" />
                    </div>

                    <div class="form-group">
                        <label class="col-form-label">Select File for Image 3</label>
                        <input asp-for="ImageFile3" class="form-control" accept=".jpg" />
                        <span asp-validation-for="ImageFile3" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 text-left">
                        <label class="col-form-label">Old image</label>
                        <img class="w-100 text-center" src="@Model.ImageUrl3" />
                    </div>

                    <div class="form-group">
                        <label class="col-form-label">Select File for Image 4</label>
                        <input asp-for="ImageFile4" class="form-control" accept=".jpg" />
                        <span asp-validation-for="ImageFile4" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 text-left">
                        <label class="col-form-label">Old image</label>
                        <img class="w-100 text-center" src="@Model.ImageUrl4" />
                    </div>

                    <div class="form-group">
                        <label class="col-form-label">Select File for Image 5</label>
                        <input asp-for="ImageFile5" class="form-control" accept=".jpg" />
                        <span asp-validation-for="ImageFile5" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 text-left">
                        <label class="col-form-label">Old image</label>
                        <img class="w-100 text-center" src="@Model.ImageUrl5" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
