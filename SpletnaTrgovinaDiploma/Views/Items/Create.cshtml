@model NewItemViewModel
@using SpletnaTrgovinaDiploma.Data;

@{
    ViewData["Title"] = "Create a new item";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <p>
            <h4>@ViewData["Title"]</h4>
        </p>

        <div class="row">
            <div class="col-md-8 ml-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Price"></label>
                                @Html.TextBoxFor(model => model.Price, "{0:0.00}")
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ProductCode"></label>
                                <input asp-for="ProductCode" class="form-control" />
                                <span asp-validation-for="ProductCode" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Availability"></label>
                                @Html.TextBoxFor(model => model.Availability, "{0:0}")
                                <span asp-validation-for="Availability" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="BrandIds"></label>
                                <select asp-for="BrandIds" class="form-control" asp-items="ViewBag.Brands" multiple></select>
                                <span asp-validation-for="BrandIds" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description"></label>
                                <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="ShortDescription"></label>
                                <textarea asp-for="ShortDescription" class="form-control" rows="6"></textarea>
                                <span asp-validation-for="ShortDescription" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-form-label">Select File</label>
                        <input asp-for="ImageFile" class="form-control" accept=".jpg" />
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
